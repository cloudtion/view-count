{
  "functions": {
    "source": ".",
    "codebase": "default",
    "predeploy": [
      "npm run build"
    ],
    "runtime": "nodejs24"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/views",
        "function": "views"
      },
      {
        "source": "/visitors",
        "function": "visitors"
      }
    ]
  }
}
